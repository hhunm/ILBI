<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8BCD69"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <LinearLayout
        android:id="@+id/view_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DFDFDF"
        android:orientation="vertical"
        android:weightSum="10">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout_fall"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/layout_border"
                    android:backgroundTint="#FFFFFF">

                    <ImageView
                        android:id="@+id/img_fall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="false" />

                    <TextView
                        android:id="@+id/txt_fall_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/img_fall"
                        android:layout_marginBottom="2dp"
                        android:layout_toRightOf="@id/img_fall"
                        android:fontFamily="@font/nanumsquare_acb"
                        android:textColor="#000000"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/txt_fall_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_fall_title"
                        android:layout_toRightOf="@id/img_fall"
                        android:fontFamily="@font/nanumsquare_acl"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/switch_fall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/layout_border"
                        android:fontFamily="@font/nanumsquare_acb"
                        android:textAlignment="textEnd"
                        android:textSize="18sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_camera"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/layout_border"
                    android:backgroundTint="#FFFFFF">

                    <ImageView
                        android:id="@+id/img_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txt_camera_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/img_camera"
                        android:layout_marginBottom="2dp"
                        android:layout_toRightOf="@id/img_camera"
                        android:fontFamily="@font/nanumsquare_acb"
                        android:textColor="#000000"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/txt_camera_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_camera_title"
                        android:layout_toRightOf="@id/img_camera"
                        android:fontFamily="@font/nanumsquare_acl"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_circle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/shape_circle" />

                        <TextView
                            android:id="@+id/txt_camera_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="18sp" />

                    </LinearLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_call"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/layout_border"
                    android:backgroundTint="#FFFFFF">

                    <ImageView
                        android:id="@+id/img_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_call_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/img_call"
                        android:layout_marginBottom="2dp"
                        android:layout_toRightOf="@id/img_call"
                        android:fontFamily="@font/nanumsquare_acb"
                        android:textColor="#000000"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/txt_call_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_call_title"
                        android:layout_toRightOf="@id/img_call"
                        android:fontFamily="@font/nanumsquare_acl"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/layout_border"
                    android:backgroundTint="#FFFFFF">

                    <ImageView
                        android:id="@+id/img_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_cancel_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/img_cancel"
                        android:layout_marginBottom="2dp"
                        android:layout_toRightOf="@id/img_cancel"
                        android:fontFamily="@font/nanumsquare_acb"
                        android:textColor="#000000"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/txt_cancel_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_cancel_title"
                        android:layout_toRightOf="@id/img_cancel"
                        android:fontFamily="@font/nanumsquare_acl"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_protector"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/layout_border"
                    android:backgroundTint="#FFFFFF">

                    <ImageView
                        android:id="@+id/img_protector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_protector_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/img_protector"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@id/img_protector"
                        android:fontFamily="@font/nanumsquare_acb"
                        android:text="TextView"
                        android:textColor="#000000"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/txt_protector_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_protector_title"
                        android:layout_marginEnd="10dp"
                        android:layout_toRightOf="@id/img_protector"
                        android:fontFamily="@font/nanumsquare_acl"
                        android:text="TextView"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_protector_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_protector_title"
                        android:layout_toRightOf="@id/txt_protector_name"
                        android:fontFamily="@font/nanumsquare_acl"
                        android:text="TextView"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_setting_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/layout_setting"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/layout_border"
                        android:backgroundTint="#FFFFFF">

                        <ImageView
                            android:id="@+id/img_setting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:id="@+id/txt_setting_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/img_setting"
                            android:fontFamily="@font/nanumsquare_acb"
                            android:text="TextView"
                            android:textColor="#000000"
                            android:textSize="22sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_help"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/layout_border"
                        android:backgroundTint="#FFFFFF">

                        <ImageView
                            android:id="@+id/img_help"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true" />

                        <TextView
                            android:id="@+id/txt_help_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/img_help"
                            android:fontFamily="@font/nanumsquare_acb"
                            android:text="TextView"
                            android:textColor="#000000"
                            android:textSize="22sp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>