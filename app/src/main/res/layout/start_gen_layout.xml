<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8BCD69"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <LinearLayout
        android:id="@+id/view_start_gn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DFDFDF"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_start_gn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layout_border"
            android:backgroundTint="#FFFFFF"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingTop="30dp"
            android:paddingEnd="30dp">

            <TextView
                android:id="@+id/txt_name_gn"
                style="@style/TITLE_STYLE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <EditText
                android:id="@+id/edit_name_gn"
                style="@style/CONTENT_STYLE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/txt_number_gn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TITLE_STYLE"
                android:text="TextView" />

            <EditText
                android:id="@+id/edit_number_gn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CONTENT_STYLE"
                android:ems="10"
                android:layout_marginBottom="30dp"
                android:inputType="phone" />

            <TextView
                android:id="@+id/txt_title_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TITLE_STYLE"
                android:text="TextView" />

            <TextView
                android:id="@+id/txt_content_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CONTENT_STYLE"
                android:paddingBottom="5dp"
                android:text="TextView" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbtn_protector"
                    style="@style/CONTENT_STYLE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RadioButton" />

                <RadioButton
                    android:id="@+id/rbtn_senior"
                    style="@style/CONTENT_STYLE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RadioButton" />
            </RadioGroup>

            <Button
                android:id="@+id/btn_start_gn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style = "@style/TITLE_STYLE"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Button" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>