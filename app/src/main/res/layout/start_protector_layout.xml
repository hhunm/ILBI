<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8BCD69"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:id="@+id/view_start_pt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#DFDFDF">

        <LinearLayout
            android:id="@+id/layout_start_pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layout_border"
            android:backgroundTint="#FFFFFF"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingTop="30dp"
            android:paddingEnd="30dp">

            <TextView
                android:id="@+id/txt_sn_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                style = "@style/TITLE_STYLE_NORMAL"/>

            <EditText
                android:id="@+id/edit_sn_name"
                style="@style/CONTENT_STYLE_NORMAL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:ems="12"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/txt_sn_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                style = "@style/TITLE_STYLE_NORMAL"/>

            <EditText
                android:id="@+id/edit_sn_number"
                style="@style/CONTENT_STYLE_NORMAL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:inputType="phone" />

            <TextView
                android:id="@+id/txt_sn_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                style = "@style/TITLE_STYLE_NORMAL"/>


            <EditText
                android:id="@+id/edit_sn_address"
                style="@style/CONTENT_STYLE_NORMAL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btn_pt_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button"
                style = "@style/TITLE_STYLE_NORMAL"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
